<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_fragment_applist_appgroup">

    <ImageView
        android:id="@+id/app_icon_appgroup"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="hello_world"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/list_app_name_appgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/app_icon_appgroup"
        android:layout_alignTop="@+id/app_icon_appgroup"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="2dp"
        android:text="hello_world"/>

    <Switch
        android:id="@+id/switch_applist_appgroup"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:checked="false" />

</LinearLayout>